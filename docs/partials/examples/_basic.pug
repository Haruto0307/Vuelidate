      code.
        .form-group(v-bind:class="{ 'form-group--error': $validations.password.$error }")
          label.form__label Password
          input.form__input(v-model="password" @input="$validations.password.setDirty()")
        span.form-group__message(v-if="!$validations.password.required") Password is required.
        span.form-group__message(v-if="!$validations.password.minLength") Password must be longer than 6 letters.

        .form-group(v-bind:class="{ 'form-group--error': $validations.repeatPassword.$error }")
          label.form__label Repeat password
          input.form__input(v-model="repeatPassword" @input="$validations.repeatPassword.setDirty()")
        span.form-group__message(v-if="!$validations.repeatPassword.sameAsPassword") Passwords must be identical.

    pre.language-javascript
      code.
        data () {
          return {
            password: '',
            repeatPassword: ''
          }
        },
        validations: {
